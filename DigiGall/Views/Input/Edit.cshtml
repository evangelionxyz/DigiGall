@model DigiGall.Models.User

<div class="container mt-5">
    <h1 class="text-center mb-4">Add DigiGall</h1>

    @if (Model is null){
        <p> No Student was found</p>
    }
    
    else{
            <div class="modal fade" id="addDigiGallModal" tabindex="-1" aria-labelledby="addDigiGallModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="addDigiGallModalLabel">harry potter</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <form method="post" asp-action="AddDigiGall" asp-controller="Input">
                            <div class="modal-body">
                                <div class="mb-3">
                                    <label for="amount" class="form-label">DigiGall Amount</label>
                                    <div class="input-group">
                                        <button type="button" class="btn btn-outline-secondary" id="decrementButton">-</button>
                                        <input type="number" class="form-control text-center" id="amount" asp-for="Galleon" value="1" min="1" />
                                        <button type="button" class="btn btn-outline-secondary" id="incrementButton">+</button>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label for="notes" class="form-label">Notes</label>
                                    <textarea class="form-control" id="notes" rows="3" placeholder="Add notes"></textarea>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-primary">Add</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

           <script> 

                document.getElementById('decrementButton').addEventListener('click', function () { 
                    const input = document.getElementById('amount'); 
                     let value = parseInt(input.value); 
                     if (value > 1) { 
                        input.value = value - 1; 
                     } 
                });

                 document.getElementById('incrementButton').addEventListener('click', function () { 
                     const input = document.getElementById('amount'); 
                     let value = parseInt(input.value); 
                     input.value = value + 1;
                 }); 
            </script>


