@model User
@{
    ViewData["Title"] = "Login Page";
    Layout = "_Layout";
}

<div class="auth-container container">

    <!-- Left column-->
    <div class="auth-content" style="background: linear-gradient(to bottom, #FFE785, #7BB7FF);">
        <div class="auth-welcome">
            <label>Welcome</label>
            <img class="auth-welcome-image"
                 src="~/resources/digigall_transparent.png"
                 alt="DigiGall Logo" />
        </div>
    </div>

    <!-- Right column-->
    <div class="auth-content">
        <form asp-action="Login" method="post">
            <div class="text-center" style="font-size: 2rem; font-weight:500">
              <label>Login</label>
            </div>

            <div class="mb-3 form-group">
                <label class="form-label">Username</label>
                <input type="text" name="Name" class="form-control" required>
                <span asp-validation-for="Name" class="form-group text-danger"></span>
            </div>
            <div class="mb-4 form-group">
                <label class="form-label">Password</label>
                <input type="password" name="Password" class="form-control" required>
            </div>

            @await Html.PartialAsync("_CustomButton", new DigiGall.Models.ButtonModel
            {
                Text = "Login",
                Class = "custom-button digi-btn-primary",
                Type = "submit",
                Attributes = "id='login-button'"
            })
        </form>
      
        <div class="mt-3 text-center">
            <label>Dont have an account?</label>
            <label>
                <a asp-controller="Auth" asp-action="Register">
                    Register
                </a>
            </label>
        </div>
        

    </div>
</div>